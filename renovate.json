{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "matchCurrentVersion": "!/^0/",
      "groupName": "all patch dependencies",
      "groupSlug": "all-patch",
    }
  ],
  "platformAutomerge": true,
  "timezone": "Europe/London",
  "schedule": [
    "before 4am"
  ]
}
